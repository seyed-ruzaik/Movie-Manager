<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#230C33"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView_home"
        android:layout_width="355dp"
        android:layout_height="295dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_image"
        app:layout_constraintBottom_toTopOf="@+id/register_movie_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tvclip" />

    <Button
        android:id="@+id/register_movie_btn"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/design_default_color_primary"
        android:drawableLeft="@mipmap/ticket"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:text="@string/register_movie_text"
        android:textColor="#FFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded,RtlSymmetry" />


    <Button
        android:id="@+id/display_movie_btn"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:background="@color/design_default_color_primary"
        android:layout_marginTop="24dp"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFF"
        android:visibility="visible"
        android:text="@string/display_movies"
        android:drawableLeft="@mipmap/display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_movie_btn"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <Button
        android:id="@+id/favourites_btn"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:text="@string/favourites_text"
        android:drawableLeft="@drawable/fv"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFF"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_movie_btn"
        tools:ignore="RtlHardcoded,RtlSymmetry"/>

    <Button
        android:id="@+id/edit_movies_btn"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/edit"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFF"
        android:visibility="visible"
        android:text="@string/edit_movies_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favourites_btn"
        tools:ignore="RtlHardcoded,RtlSymmetry"/>

    <Button
        android:id="@+id/search_btn"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFF"
        android:visibility="visible"
        android:text="@string/search_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_movies_btn"
        tools:ignore="RtlHardcoded,RtlSymmetry"/>

    <Button
        android:id="@+id/ratings_btn"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/ratings"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFF"
        android:visibility="visible"
        android:text="@string/ratings_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_btn"
        tools:ignore="RtlHardcoded,RtlSymmetry"/>

    <TextView
        android:id="@+id/textView_header"
        android:layout_width="233dp"
        android:layout_height="42dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_textview"
        android:gravity="center"
        android:text="@string/movie_manager_header_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</RelativeLayout>